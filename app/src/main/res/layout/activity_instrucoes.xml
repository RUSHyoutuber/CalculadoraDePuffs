<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstrucoesActivity">

    <ScrollView
        android:id="@+id/maincontent"
        android:background="@color/branco"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/branco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/texto1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="COMO CALCULAR O PREÇO UNITARIO DE UM ITEM"
                android:textColor="@color/azul"
                android:onClick="irParaInstrucaoPrecoUnitario"
                tools:ignore="OnClick" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="100dp"
                android:text="COMO CALCULAR O PREÇO DO METRO QUADRADO"
                android:textColor="@color/azul"
                android:onClick="irParaInstrucaoPrecoMetro"
                tools:ignore="OnClick" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/texto3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="100dp"
                android:text="MAIS DICAS"
                android:textColor="@color/azul"
                android:onClick="irParaInstrucaoMaisDicas"
                tools:ignore="OnClick" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>